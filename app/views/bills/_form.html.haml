.row
  .col-xs-12.col-md-6
    = form_for @bill, html: {class: 'form-horizontal', role: 'form', multipart: true} do |form|
      = form.text_field :amount, placeholder: 'Cantidad', class: 'form-control'
      = form.collection_select :client_id, Client.order(:name),:id,:name, {prompt: 'Select a Client'}, { class: 'form-control' }
      = form.submit "Create" , class: 'btn btn-default'